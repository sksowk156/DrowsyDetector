<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_homes_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".HomesFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_homes_logo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/watchout_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_homes_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_homes_logo">

        <LinearLayout
            android:id="@+id/layout_homes_buttons"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_homes_tostatistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary2"
                android:text="@string/home_statisticbt"
                android:textSize="36sp"
                android:textStyle="bold"
                app:cornerRadius="25dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_homes_tosetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary4"
                android:text="@string/home_settingbt"
                android:textSize="36sp"
                android:textStyle="bold"
                app:cornerRadius="25dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_homes_toanalyze"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/primary1"
            android:text="@string/home_analyzebt"
            android:textSize="40sp"
            android:textStyle="bold"
            app:cornerRadius="35dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
