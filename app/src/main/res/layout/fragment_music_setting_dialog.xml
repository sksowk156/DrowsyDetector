<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.view.setting.MusicSettingDialogFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_settingdialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="노래 제목"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_settingdialog_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:progressDrawable="@drawable/seekbar_background"
        android:thumb="@drawable/switch_thumb_on"
        app:layout_constraintBottom_toBottomOf="@id/iv_settingdialog_controller"
        app:layout_constraintEnd_toStartOf="@id/iv_settingdialog_controller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_settingdialog_controller"
        tools:progress="40" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_settingdialog_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/seekbar_settingdialog_music"
        app:layout_constraintTop_toBottomOf="@id/seekbar_settingdialog_music"
        tools:text="00:00" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_settingdialog_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@id/seekbar_settingdialog_music"
        app:layout_constraintTop_toBottomOf="@id/seekbar_settingdialog_music"
        tools:text="00:00" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_settingdialog_controller"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settingdialog_title" />

</androidx.constraintlayout.widget.ConstraintLayout>